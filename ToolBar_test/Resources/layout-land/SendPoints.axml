<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
    <include
        layout="@layout/toolbar"
        android:id="@id/toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SPScrollViewL"
        android:layout_below="@id/toolbar">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/SPMainLayoutL"
            android:layout_below="@id/toolbar">
            <TextView
                android:text="@string/DistributeText"
                android:textSize="22dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/SPCanDistributeText"
                android:gravity="center"
                android:paddingTop="10dp" />
            <FrameLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SPCanDistributeFrameLayoutL"
                android:backgroundTint="#00000000"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/blueRect_style"
                    android:id="@id/SPCDblueSquare"
                    app:backgroundTint="#80039be5"
                    android:backgroundTintMode="src_in"
                    android:layout_gravity="center" />
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_height="match_parent"
                    android:id="@+id/SPCDlinearLayoutL"
                    android:layout_width="match_parent"
                    android:layout_gravity="center">
                    <TextView
                        android:text="0"
                        android:textSize="22dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/button_text_style"
                        android:id="@id/SPCDpoints"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center" />
                    <TextView
                        android:text="points"
                        android:textSize="22dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/button_text_style"
                        android:id="@id/SPCDpointsText"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center" />
                </LinearLayout>
            </FrameLayout>
            <TextView
                android:text="I want to say thanks to"
                android:textSize="22dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/SPSayThanksText"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:gravity="left"
                android:paddingTop="10dp"
                android:layout_marginLeft="0dp" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@id/SPSelectPerson"
                    android:layout_marginLeft="10dp"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:maxLines="1"
                    android:hint="select person" />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:text="and send him/her"
                android:textSize="22dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/SPSendText"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SPPointsLayoutL"
                android:paddingLeft="10dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">
                    <android.support.design.widget.TextInputEditText
                        android:id="@id/SPNumOfPointsEditText"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:hint="# of points" />
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:text="point(s)"
                    android:textSize="22dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@id/SPPointsText"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:gravity="left" />
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/SPNotesEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:maxLines="1"
                    android:hint="Notes" />
            </android.support.design.widget.TextInputLayout>
            <FrameLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/SPButtonFrameLayoutL"
                android:layout_gravity="center">
                <Button
                    android:text="@string/SendPoints"
                    android:textSize="18dp"
                    android:textColor="@drawable/button_text_style"
                    android:id="@id/SPSendButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:theme="@style/BlueButton"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textAllCaps="false" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>