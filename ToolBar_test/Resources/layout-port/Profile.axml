<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar" />
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:id="@+id/MainLayout">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/UserInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ToolBar_test.CircularImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/imageView_frame"
                android:src="@drawable/ic_noavatar"
                android:id="@id/UserAvatar"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" />
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/UserNameLayout">
                <FrameLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/frameLayout3"
                    android:layout_gravity="center|bottom"
                    android:layout_weight="1">
                    <TextView
                        android:text="null"
                        android:textSize="22dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ProfileUserName"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:paddingBottom="10dp"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:ellipsize="end" />
                    <EditText
                        android:inputType="textPersonName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/EditProfileUserName"
                        android:gravity="center|bottom"
                        android:textSize="22dp" />
                </FrameLayout>
                <TextView
                    android:text="null"
                    android:textSize="18dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/ProfileUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/NotificationsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/EmailNotificationText"
                android:textSize="22dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/EmailNotificationsText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:layout_weight="1" />
            <FrameLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/frameLayout1"
                android:layout_gravity="right"
                android:layout_marginRight="20dp">
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/SwitchEmailNotifications" />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/SwitchStateText"
                    android:textSize="22dp"
                    android:textColor="@color/material_grey_300"
                    android:gravity="right" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>